{
  "tasks": {
    "dev": "deno run -A --watch=static/,src/ src/main.ts",
    "start": "deno run -A src/main.ts",
    "test": "deno test -A",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/main.ts"
  },
  "importMap": "import_map.json",
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
